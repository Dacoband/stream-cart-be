# Copy this file to .env and update with your actual values
# Database Configuration
POSTGRES_DB=streamcart_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# RabbitMQ Configuration
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=change_this_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# JWT Configuration - IMPORTANT: Change these in production!
JWT_SECRET_KEY=generate-a-strong-secret-key-for-production
JWT_ISSUER=StreamCartAPI
JWT_AUDIENCE=StreamCartClients
JWT_EXPIRY_MINUTES=60

# Email Configuration
EMAIL_API_KEY=your-email-service-api-key
EMAIL_SECRET_KEY=your-email-service-secret-key
EMAIL_FROM_EMAIL=noreply@yourdomain.com
EMAIL_FROM_NAME=StreamCart
EMAIL_PROVIDER=smtp

# Appwrite Configuration
APPWRITE_PROJECT_ID=your-appwrite-project-id
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_BUCKET_ID=your-appwrite-bucket-id
APPWRITE_API_KEY=your-appwrite-api-key

# Delivery Service Configuration (Giao Hang Nhanh)
API_TOKEN_GHN=your-ghn-api-token
GHN_SHOPID=your-ghn-shop-id

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# Service Ports
ACCOUNT_SERVICE_PORT=7022
API_GATEWAY_PORT=8000
PRODUCT_SERVICE_PORT=7005
SHOP_SERVICE_PORT=7077
ORDER_SERVICE_PORT=7135
PAYMENT_SERVICE_PORT=7021
CART_SERVICE_PORT=7228
DELIVERY_SERVICE_PORT=7202